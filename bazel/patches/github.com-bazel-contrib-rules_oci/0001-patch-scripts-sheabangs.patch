+++ b/oci/private/authn.bzl
@@ -124,7 +124,7 @@ echo %1 | docker-credential-{} get """.format(helper_name),
         rctx.file(
             executable,
             content = """\
-#!/usr/bin/env bash
+#!/bin/bash
 exec "docker-credential-{}" get <<< "$1" """.format(helper_name),
         )
     result = rctx.execute([rctx.path(executable), raw_host])
