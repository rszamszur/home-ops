build:remote-exec --remote_executor=grpcs://buildbarn-grpc.szamszur.cloud
build:remote-exec --remote_default_exec_properties OSFamily=linux 
build:remote-exec --remote_default_exec_properties container-image="docker://harbor.puqu.io/starterkit/bash-coreutils-x86_64-cc:2wgjj260ff4aclgbgf8fi5wx7sbfxy9p"
# The rules_oci/oci/private/descriptor.sh fails remotely on starterkit because its sheabang expects to have /usr/bin/env to find bash.
# Which is not present on starterkit.
build:remote-exec --strategy=OCIDescriptor=sandboxed
build:remote-exec --strategy=PackageTar=sandboxed
build:remote-exec --repo_env=HERMETIC_CC_TOOLCHAIN_CACHE_PREFIX=/proc/self/cwd

# Only download the final result, the intermediate files can stay on the
# server side.
build --remote_download_toplevel

build --remote_cache=grpcs://buildbarn-grpc.szamszur.cloud

build --bes_results_url=https://buildbuddy.szamszur.cloud/invocation/
build --bes_backend=grpcs://buildbuddy-grpc.szamszur.cloud

common --enable_platform_specific_config
build:linux --sandbox_add_mount_pair=/tmp
build:macos --sandbox_add_mount_pair=/var/tmp
build:windows --sandbox_add_mount_pair=C:\Temp
